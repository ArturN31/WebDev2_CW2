<!DOCTYPE html>
<html lang="en">
<head>
    {{>partials/header}}
    <title>Homepage</title>
</head>
<body>
    {{>partials/navbar}}
    <div class="container container-customised py-5">
        <div class="row">
            <div class="d-flex flex-column bg-dark py-3 px-3">
                <button type="button" class="btn btn-primary btn-lg my-1" onclick="window.location.href='/staff_edit_dish'">Edit dish</button>
            </div>
            <div class="col">
                <table class="table table-hover">
                    <h5 class="d-flex justify-content-center">Lunch Menu</h5>
                    <tr>
                        <th id="left-th">Dish name:</th>
                        <th>Description:</th>
                        <th>Ingredients:</th>
                        <th>Allergens:</th>
                        <th>Price:</th>
                        <th id="right-th">Available:</th>
                    </tr>
                    {{#lunch_menu}}
                    <tr>
                        <td>{{dish_name}}</td>
                        <td>{{dish_description}}</td>
                        <td>{{dish_ingredients}}</td>
                        <td>{{dish_allergens}}</td>
                        <td>&#163;{{dish_price}}</td>
                        <td>{{dish_available}}</td>
                    </tr>
                    {{/lunch_menu}}
                </table>
                {{^lunch_menu}}
                    <div class="alert alert-info" role="alert">
                        No entries yet.
                    </div>
                {{/lunch_menu}}
            </div>
        </div>
    </div>
    {{>partials/footer}}
</body>
</html>