<form id="new-dish-form" class="bg-dark text-white my-2">
    <div class="form-group my-2 mx-4">
      <label for="FormControlInput1">Dish name</label>
      <input type="text" class="form-control" id="FormControlInput1" placeholder="Enter dish name">
    </div>
    <div class="form-group my-2 mx-4">
        <label for="FormControlTextarea1">Description</label>
        <textarea class="form-control" id="FormControlTextarea1" rows="3" placeholder="Enter dish description"></textarea>
    </div>
    <div class="form-group my-2 mx-4">
        <label for="FormControlTextarea2">Ingredients</label>
        <textarea class="form-control" id="FormControlTextarea2" rows="3" placeholder="Enter dish ingredients (separating them with comma)"></textarea>
    </div>
    <div class="form-group my-2 mx-4">
        <label for="FormControlSelect1">Allergens <i>(to select multiple hold down CTRL on Windows or Command on Mac)</i></label>
        <select multiple class="form-control" id="FormControlSelect1">
          <option>Celery</option>
          <option>Cereals containing gluten (barley, oats)</option>
          <option>Crustaceans (prawns, crabs, lobsters)</option>
          <option>Eggs</option>
          <option>Fish</option>
          <option>Lupin</option>
          <option>Milk</option>
          <option>Molluscs (mussels, oysters)</option>
          <option>Mustard</option>
          <option>Peanuts</option>
          <option>Sesame</option>
          <option>Soybeans</option>
          <option>Sulphur dioxide and sulphites</option>
          <option>Tree nuts</option>
        </select>
    </div>
    <div class="row">
        <div class="col my-2 mx-4">
            <div class="form-group">
                <label for="FormControlInput2">Price</label>
                <input type="text" class="form-control" id="FormControlInput2" placeholder="Enter price">
            </div>
        </div>
        <div class="col my-2 mx-4">
            <label>Menu:</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="radios-menu" id="radios-lunch" value="lunch">
                <label class="form-check-label" for="radios-lunch">
                  Lunch
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="radios-menu" id="radios-dinner" value="dinner">
                <label class="form-check-label" for="radios-dinner">
                  Dinner
                </label>
            </div>
        </div>
        <div class="col my-2 mx-4">
            <label>Available:</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="radios-available" id="radios-yes" value="yes" checked>
                <label class="form-check-label" for="radios-yes">
                    Yes
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="radios-available" id="radios-no" value="no">
                <label class="form-check-label" for="radios-no">
                  No
                </label>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mb-4 mt-2 mx-4">Add new dish</button>
    <button type="reset" class="btn btn-secondary mb-4 mt-2">Reset</button>
</form>