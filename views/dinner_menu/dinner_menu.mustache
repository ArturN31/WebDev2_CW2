<!DOCTYPE html>
<html lang="en">
<head>
    {{>partials/header}}
    <title>Dinner menu</title>
</head>
<body>
    <div class="bg">
        {{>partials/navbar}}
        <div class="container py-5">
            <div class="row d-flex justify-content-center">
                <div class="col-md-4 my-2">
                    <button type="button" class="slide_from_right btn-lg shadow" onclick="window.location.href='/menu'">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"><path fill-rule="evenodd" d="M10.78 19.03a.75.75 0 01-1.06 0l-6.25-6.25a.75.75 0 010-1.06l6.25-6.25a.75.75 0 111.06 1.06L5.81 11.5h14.44a.75.75 0 010 1.5H5.81l4.97 4.97a.75.75 0 010 1.06z"></path></svg>
                        <div class="pt-1">Go back</div>
                    </button>
                </div>
                <div class="col-md-4 my-2"></div>
            </div>
            <div class="row d-flex justify-content-center">
                <!-- APPETIZERS COLUMN -->
                <div class="col-md-4 my-2">
                    <div class="card shadow">
                        <img class="card-img-top" src="/img/menu-card/appetizers.jpg" alt="Card image cap">
                        <div class="card-body">
                            <p class="d-flex justify-content-center">View our&nbsp;<a href="/dinner_menu/dinner_appetizers">Appetizers</a></p>
                        </div>
                    </div>
                </div>
                <!-- EOF APPETIZERS COLUMN -->
    
                <!-- SIDES COLUMN -->
                <div class="col-md-4 my-2">
                    <div class="card shadow d-flex justify-content-center">
                        <img class="card-img-top" src="/img/menu-card/sides.jpg" alt="Card image cap">
                        <div class="card-body">
                            <p class="d-flex justify-content-center">View our&nbsp;<a href="/dinner_menu/dinner_sides">Sides</a></p>
                        </div>
                    </div>
                </div>
                <!-- EOF SIDES COLUMN -->
            </div>
    
            <div class="row d-flex justify-content-center">
                <!-- MAIN COURSE COLUMN -->
                <div class="col-md-4 my-2">
                    <div class="card shadow">
                        <img class="card-img-top" src="/img/menu-card/main_course.jpg" alt="Card image cap">
                        <div class="card-body">
                            <p class="d-flex justify-content-center">View our&nbsp;<a href="/dinner_menu/dinner_main_course">Main Course</a></p>
                        </div>
                    </div>
                </div>
                <!-- EOF MAIN COURSE COLUMN -->
            </div>
    
            <div class="row d-flex justify-content-center">
                <!-- DESSERTS COLUMN -->
                <div class="col-md-4 my-2">
                    <div class="card shadow">
                        <img class="card-img-top" src="/img/menu-card/desserts.jpg" alt="Card image cap">
                        <div class="card-body">
                            <p class="d-flex justify-content-center">View our&nbsp;<a href="/dinner_menu/dinner_desserts">Desserts</a></p>
                        </div>
                    </div>
                </div>
                <!-- EOF SANDWICHES COLUMN -->
    
                <!-- BEVERAGES COLUMN -->
                <div class="col-md-4 my-2">
                    <div class="card shadow">
                        <img class="card-img-top" src="/img/menu-card/dinner_beverage.jpg" alt="Card image cap">
                        <div class="card-body">
                            <p class="d-flex justify-content-center">View our&nbsp;<a href="/dinner_menu/dinner_beverages">Beverages</a></p>
                        </div>
                    </div>
                </div>
                <!-- EOF BEVERAGES COLUMN -->
            </div>
        </div>
        {{>partials/footer}}
    </div>
